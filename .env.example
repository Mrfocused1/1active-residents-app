# API Keys - DO NOT commit actual values to git
# Copy this file to .env and fill in your actual keys

# Gemini AI API Key
GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI API Key (optional)
OPENAI_API_KEY=your_openai_api_key_here

# News API Key
NEWS_API_KEY=your_news_api_key_here

# Perplexity API Key
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Google Maps API Key
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# SendGrid API Key (for backend email sending)
SENDGRID_API_KEY=your_sendgrid_api_key_here

# Google OAuth Client IDs (for Gmail integration)
GOOGLE_IOS_CLIENT_ID=your_ios_client_id_here
GOOGLE_ANDROID_CLIENT_ID=your_android_client_id_here
GOOGLE_WEB_CLIENT_ID=your_web_client_id_here
GOOGLE_CLIENT_SECRET=your_client_secret_here

# Backend API Base URL
API_BASE_URL=http://localhost:3000/api

# Use mock data (true for development without backend)
USE_MOCK_DATA=true
