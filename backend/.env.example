# Server Configuration
PORT=3000
NODE_ENV=development

# MongoDB (optional - app works without it using in-memory storage)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/activeresidents

# JWT Secret (change this in production!)
JWT_SECRET=your-super-secret-jwt-key-change-this

# Email Configuration (for password reset emails)
# Without SMTP config, emails are logged to console (development mode)
# For production, use SendGrid, AWS SES, Mailgun, or Gmail
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your-sendgrid-api-key
SMTP_FROM="Active Residents" <noreply@activeresidents.app>
SMTP_SECURE=false

# App URL (for password reset links in emails)
# Set this to your web domain or app deep link scheme
APP_URL=https://activeresidents.app
